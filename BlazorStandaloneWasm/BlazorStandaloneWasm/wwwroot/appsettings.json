{
  "OIDC": {
    "Authority": "https://login.microsoftonline.com/[TenantID]",
    "ClientId": "[ClientID]",
    "RedirectUri": "https://[HostName][:Port]/authentication/login-callback",
    "PostLogoutRedirectUri": "https://[HostName][:Port]/authentication/logout-callback",
    "DefaultScopes": [
      "openid",
      "profile",
      "email"
    ],
    "ResponseType": "id_token"
  }
}
